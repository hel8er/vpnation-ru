---
const { slug, title, pic} = Astro.props;

---
<section id={slug} class="min-h-[60vh]">

<div class="hero max-w-4xl mx-auto py-16">
    <div class="hero-content flex-col lg:flex-row-reverse">
      <img src={pic} class="max-w-sm rounded-lg" />
      <div class="">
        <h1 class="text-2xl lg:text-5xl font-bold">{title}</h1>
        <p class="py-6">
 <slot />
        </p>
      </div>
    </div>
  </div>
</section>